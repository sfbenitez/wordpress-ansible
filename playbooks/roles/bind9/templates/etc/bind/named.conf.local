zone "{{domain}}" {
        type master;
        file "db.{{domain}}";
};

zone "{{ hostvars['node1']['ansible_ssh_host'].split('.')[2] }}.{{ hostvars['node1']['ansible_ssh_host'].split('.')[1] }}.{{ hostvars['node1']['ansible_ssh_host'].split('.')[0] }}.in-addr.arpa" {
        type master;
        file "db.{{ hostvars['node1']['ansible_ssh_host'].split('.')[0] }}.{{ hostvars['node1']['ansible_ssh_host'].split('.')[1] }}.{{ hostvars['node1']['ansible_ssh_host'].split('.')[2] }}";
};
